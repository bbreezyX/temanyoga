generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  CUSTOMER
  ADMIN
}

enum OrderStatus {
  PENDING_PAYMENT
  AWAITING_VERIFICATION
  PAID
  PROCESSING
  SHIPPED
  COMPLETED
  CANCELLED
}

enum PaymentProofStatus {
  PENDING
  APPROVED
  REJECTED
}

enum NotificationType {
  NEW_ORDER
  PAYMENT_PROOF_UPLOADED
  ORDER_STATUS_CHANGED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(CUSTOMER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          String         @id @default(cuid())
  name        String
  slug        String         @unique
  description String
  price       Int
  stock       Int?
  isActive    Boolean        @default(true)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  images      ProductImage[]
  orderItems  OrderItem[]

  @@index([isActive])
  @@index([createdAt])
}

model ProductImage {
  id        String   @id @default(cuid())
  productId String
  url       String
  key       String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
}

model ShippingZone {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Int
  sortOrder   Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orders      Order[]

  @@index([isActive])
}

model Order {
  id                   String         @id @default(cuid())
  orderCode            String         @unique
  customerName         String
  customerEmail        String
  customerPhone        String
  shippingAddress      String
  status               OrderStatus    @default(PENDING_PAYMENT)
  totalAmount          Int
  shippingCost         Int            @default(0)
  shippingZoneId       String?
  shippingZoneSnapshot String?
  notes                String?
  trackingNumber       String?
  courier              String?
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt
  items                OrderItem[]
  paymentProofs        PaymentProof[]
  notifications        Notification[]
  shippingZone         ShippingZone?  @relation(fields: [shippingZoneId], references: [id], onDelete: SetNull)

  @@index([orderCode])
  @@index([status])
  @@index([createdAt])
  @@index([shippingZoneId])
}

model OrderItem {
  id                  String  @id @default(cuid())
  orderId             String
  productId           String
  quantity            Int
  unitPriceSnapshot   Int
  productNameSnapshot String
  order               Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product             Product @relation(fields: [productId], references: [id])

  @@index([orderId])
}

model PaymentProof {
  id         String             @id @default(cuid())
  orderId    String
  imageUrl   String
  imageKey   String
  status     PaymentProofStatus @default(PENDING)
  notes      String?
  reviewedAt DateTime?
  createdAt  DateTime           @default(now())
  order      Order              @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([status])
}

model Notification {
  id          String           @id @default(cuid())
  type        NotificationType
  title       String
  message     String
  orderId     String?
  isRead      Boolean          @default(false)
  createdAt   DateTime         @default(now())
  order       Order?           @relation(fields: [orderId], references: [id], onDelete: SetNull)

  @@index([isRead])
  @@index([createdAt])
}
